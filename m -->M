    <body>
        <label for="texto">Mande qualquer abobrinha</label>
        <input type="text" id="texto" oninput="mtoM()">
        </br>
        <label for="resultado">ABOBRINHA sรณ que em MAIUSCULO:</label>
        <input type="text" id="resultado" readonly>
     
        <script>
            function mtoM() {
                let texto = document.getElementById('texto').value;
                let textoMaiusculo = texto.toUpperCase();
                document.getElementById('resultado').value = textoMaiusculo;
            }
        </script>
    </body>
